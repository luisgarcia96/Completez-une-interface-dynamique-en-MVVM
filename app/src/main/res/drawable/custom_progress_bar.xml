<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/progressBarBackground" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Define the secondary progress properties like color etc -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="@color/progressBarSecondary" />
                <corners android:radius="10dp" />
            </shape>
        </clip>
    </item>

    <!-- Define the progress properties like color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/progressBarPrimary" />
                <corners android:radius="10dp" />
            </shape>
        </clip>
    </item>

</layer-list>